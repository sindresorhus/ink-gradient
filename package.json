		"strip-ansi": "^7.1.0"
	},
	"peerDependencies": {
		"ink": ">=4"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.2.10",
		"ava": "^5.3.0",
		"eslint-config-xo-react": "^0.27.0",
