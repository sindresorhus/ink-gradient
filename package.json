		"ink": "^4.2.0",
		"ink-testing-library": "^3.0.0",
		"react": "^18.2.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.3",
		"xo": "^0.54.2"
	},
	"ava": {
		"color": true,
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": [
			"xo-react"
		]
	}
